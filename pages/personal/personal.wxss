/* personal.wxss */
page{
  background: #eeeeee;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px 0;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.userinfo-list{
  background: #fff;
  border-radius: 8px;
  margin: 20px 50rpx;
}
.userinfo-list image{
  width: 14px;
  height: 14px;
  vertical-align:text-bottom;
}
.userinfo-list-h3{
  padding: 12px 8px;
  border-bottom: 1px solid #ececec;
  box-shadow: 0px 1px 1px #ececec; 
  font-size: 14px;
  font-weight: bold;
}
.userinfo-list-h3 image{
   float: right;
}
.userinfo-list-item{
   padding: 12px 8px;
}