/* promotion.wxss */
.pro-box{
  position: relative;
}
.pro-box image{
  height: 400rpx;
}
.pro-title{
  position: absolute;
  bottom:6px;
  color: #fff;
  left: 10px;
  font-size: 20px;
  font-weight: bold;
  text-shadow: 1px 1px 1px #000;
}
.address{
  padding: 14px;
  border-bottom: 1px solid #ececec;
}
.distance{
  color: #888888;
}
.address image{
  display: block;
  width: 20px;
  height: 20px;
  float: right;
}
.propaganda-image{
  border-top: 10px solid #f5f5f5;
  height: 1800rpx;
  width: 100%;
}